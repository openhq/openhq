<div class="pure-g">
  <div class="pure-u-1">
    <h1>Signup</h1>

    <%= simple_form_for(@signup, url: signups_path) do |f| %>
      <%= render 'shared/form_errors', object: f.object %>

      <h2>Your Team</h2>

      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
          <%= f.input :email, as: :email, required: true, label: "Your Email", autofocus: true %>
        </div>
        <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
          <%= f.input :team_name, required: true %>
        </div>
        <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
          <%= f.input :subdomain, required: true %>
        </div>
      </div>


      <div class="form-actions">
        <%= f.button :submit, "Signup", class: "btn btn-main" %>
      </div>
    <% end %>
  </div>

</div>
