<h2>Resend unlock instructions</h2>

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "pure-form pure-form-stacked full-width-inputs" }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

  <div class="form-inputs">
    <%= f.input :email, as: :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend unlock instructions", class: "btn btn-main" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
