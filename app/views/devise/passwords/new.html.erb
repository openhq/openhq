<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "pure-form pure-form-stacked full-width-inputs" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, as: :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "pure-button pure-button-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
