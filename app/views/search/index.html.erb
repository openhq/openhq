<div class="page-header">
  <h1>
    <%= pluralize(@results.total_count, "result") %> for "<%= @query %>"
  </h1>
</div>

<% if @results.any? %>
  <ul class="ui-search-list">
    <% @results.each do |result| %>
      <li>
        <%= render result.searchable_type.downcase, { model: result.searchable } %>
      </li>
    <% end %>
  </ul>

  <div class="search actions">
    <%= link_to_next_page @results, 'Next Page', params: { q: @query }, class: "next btn btn-secondary" %>
    <%= link_to_previous_page @results, 'Previous Page', params: { q: @query }, class: "prev btn btn-secondary" %>
  </div>
<% end %>