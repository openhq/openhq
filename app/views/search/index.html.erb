<div class="page-header">
  <h1>
    <%= pluralize(@results.total_count, "result") %> for "<%= @query %>"
  </h1>
</div>

<% if @results.any? %>
  <ul class="ui-search-list">
    <% @results.each do |result| %>
      <li>
        <%= render result.searchable_type.downcase, { model: result.searchable } %>
      </li>
    <% end %>
  </ul>

  <%= paginate @results %>
<% end %>