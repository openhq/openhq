<ul class="team-list">
  <% present_collection(@team_members).each do |user| %>
    <li>
      <%= user.avatar %>
      <h4>
        <%= link_to_if can?(:edit, user.user), user.full_name, edit_team_path(user.user) %>
        <small>(<%= user.user.role %>)</small>
      </h4>
    </li>
  <% end %>
  <li>
    <a href="<%= new_user_invitation_path %>">
      <%= image_tag "default-avatar.jpg", width: 100, class: "avatar" %>
      <h4>Invite someone</h4>
    </a>
  </li>
</ul>
