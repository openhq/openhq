<div class="pure-g">
  <div class="pure-u-1">
    <h1>Hey, <%= current_user.first_name %></h1>

    <h2>Your details</h2>

    <%= simple_form_for(current_user, url: account_path, html: { method: :put }) do |f| %>
      <%= render 'shared/form_errors', object: f.object %>

      <div class="form-inputs account-settings">
        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :first_name, required: true, autofocus: true %>
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :last_name, required: true %>
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :username, as: :string, required: true %>
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :email, as: :email, required: true %>
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :notification_frequency, as: :select, collection: User.notification_frequencies, :include_blank => false %>
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
          <%= f.input :password_confirmation, required: false %>
          </div>
        </div>

        <hr>

        <h2>Your Avatar</h2>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <% present(current_user) do |user_presenter| %>
              <%= user_presenter.avatar %>
            <% end %>
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :avatar, label: "Upload a new avatar:" %>
          </div>
        </div>

        <hr>

        <h2>Extra profile information</h2>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :job_title, required: false %>
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :phone, required: false %>
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :skype, required: false %>
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1 pure-u-lg-2-3 content-input">
            <%= render 'shared/text_box', form: f, method: :bio %>
          </div>
        </div>

        <hr>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Save changes", class: "btn btn-main" %>
      </div>
    <% end %>

    <p>Unhappy with this service? You can <%= link_to "delete your account", account_path, data: { confirm: "Are you sure?" }, method: :delete %> at any time.</p>
  </div>

</div>
