<div class="pure-g">
  <div class="pure-u-1 pure-u-md-3-5 gutter-right">
    <h1>Hey, <%= current_user.first_name %></h1>

    <p>Moar account settings an stuff!</p>

    <hr>

    <p>Unhappy with this service? You can <%= link_to "delete your account", account_path, data: { confirm: "Are you sure?" }, method: :delete %> at any time.</p>
  </div>

  <div class="pure-u-1 pure-u-md-2-5">

    <h2>Update your details</h2>

    <%= simple_form_for(current_user, url: account_path, html: { method: :put }) do |f| %>
      <%= render 'shared/form_errors', object: f.object %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true %>
        <%= f.input :last_name, required: true %>
        <%= f.input :username, as: :string, required: true %>
        <%= f.input :email, as: :email, required: true %>

        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Save changes", class: "btn btn-main" %>
      </div>
    <% end %>

  </div>

</div>
