<td class="avatar">
  <%= present(n.actioner).avatar(30) %>
</td>

<td class="content">
  <p><strong><%= n.actioner.display_name %></strong> commented on <%= link_to n.story.name, [n.project, n.story] %>, in <%= link_to n.project.name, n.project %>:</p>

  <div class="details">
    <%= markdownify n.notifiable.content %>

    <% if n.notifiable.attachments.any? %>
      <ul>
        <% n.notifiable.attachments.each do |a| %>
          <li><%= link_to a.file_name, a.url %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</td>