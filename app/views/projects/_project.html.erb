<% if can? :read, project %>
<div class="pure-u-1 pure-u-md-1-2">
  <div class="project-box">
    <section class="info">
      <h3>
        <%= link_to project do %>
          <%= project.name %>
          <small>Last updated <%= human_time project.updated_at %></small>
        <% end %>
      </h3>
    </section>

    <footer>
      <div class="members">
        <% present_collection(project.users).each do |user| %>
          <%= user.avatar_link(30) %>
        <% end %>
      </div>
    </footer>
  </div>
</div>
<% end %>
