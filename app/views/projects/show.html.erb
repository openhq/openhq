<div class="page-header">
  <ul class="actions h-list">
  <% if can? :update, @project %>
    <li>
      <%= link_to "Manage Project", [:edit, @project], class: "btn btn-text" %>
    </li>
  <% end %>
  <% if can? :create, @story %>
    <li>
      <%= link_to "New Story", [:new, @project, :story], class: "btn btn-main" %>
    </li>
  <% end %>
  </ul>

  <h1>
    <%= @project.name %>
  </h1>
</div>

<% if @project.stories.any? %>
  <ul class="ui-stories-list">
    <% @project.stories.recent.each do |story| %>
      <li>
        <%= link_to [@project, story] do %>
          <div class="members">
            <% present_collection(story.collaborators).each do |user| %>
              <%= user.avatar(30) %>
            <% end %>
          </div>

          <h4>
            <span class="title"><%= truncate(story.name, length: 50, separator: ' ') %></span>
            <small>updated <%= human_time story.updated_at %></small>
          </h4>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>


<% if @project.stories.only_deleted.any? %>
  <div class="center archive-link">
    <%= link_to archived_project_stories_path(@project), class: "btn btn-secondary btn-with-icon" do %>
      <span class="icon icon-archive"></span>
      View archived stories (<%= @project.stories.only_deleted.count %>)
    <% end %>
  </div>
<% end %>
