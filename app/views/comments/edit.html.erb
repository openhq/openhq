<%= simple_form_for [@project, @story, @comment] do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-17-24 ui-story-container">
      <%= render 'shared/form_errors', object: f.object %>
      <div class="ui-story">
        <article>
          <header>
            <div class="actions">
              <%= link_to "Cancel", project_story_path(@project, @story) %>
            </div>
            <%= present(@comment.owner).avatar_link(30) %>
            <%= present(@comment.owner).display_name %> added <%= human_time @comment.created_at %>
          </header>
          <section class="body edit-mode">
            <div class="content-input">
              <%= render 'shared/text_box', form: f, method: :content, tabindex: 2 %>
              <footer>
                <%= f.submit "Save changes", class: "btn btn-main", tabindex: 3 %>
              </footer>
            </div><%# /.content-input %>
          </section>
        </article>
      </div>
    </div>
  </div>
<% end %>
