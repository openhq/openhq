<ul class="plain-list actions-list">
  <li>Personal Settings</li>
  <li>
    <%= link_to "My Profile", edit_settings_account_path, class: "link-large" %>
  </li>
  <li>
    <%= link_to "Change Password", settings_password_path, class: "link-large" %>
  </li>
</ul>

<ul class="plain-list actions-list">
  <li>My Teams</li>
  <% current_user.teams.each do |team| %>
  <li>
    <%= link_to team.name, settings_team_path(id: team.subdomain), class: "link-large" %>
  </li>
  <% end %>
</ul>
