<div class="pure-g">
  <div class="pure-u-1 pure-u-md-8-24 pure-u-lg-6-24">
    <%= render "settings/menu" %>
  </div>

  <div class="pure-u-1 pure-u-md-1-24"></div>

  <div class="pure-u-1 pure-u-md-15-24 pure-u-lg-17-24">
    <h1>Change my password</h1>

    <%= simple_form_for(current_user, url: settings_password_path, html: {method: :post}) do |f| %>
      <%= render 'shared/form_errors', object: f.object %>

      <div class="form-inputs account-settings">
        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :current_password, autocomplete: "off", hint: "we need your current password to confirm your changes", required: true %>
          </div>

          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <%= f.input :password, autocomplete: "off", label: "New password", required: true %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Save password", class: "btn btn-main" %>
      </div>
    <% end %>

  </div>
</div>
