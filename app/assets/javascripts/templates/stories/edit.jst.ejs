<form ng-submit="saveChanges()">
  <input type="text" ng-model="story.name" placeholder="Name your story&hellip;" class="title-input" />

  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-17-24 ui-story-container">
      <div class="ui-story">
        <article>
          <header>
            <div class="actions">
              <a href="/{{ story.story_type }}s/{{ story.slug }}">Cancel</a>
            </div>
            <user-avatar user="story.owner"></user-avatar>
            {{ story.owner.display_name }} added <human-time datetime="story.created_at"></human-time>
          </header>
        </article>
      </div>
    </div>
  </div>
</form>