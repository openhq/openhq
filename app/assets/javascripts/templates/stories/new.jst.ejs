<form ng-submit="createStory(story)">
  <input type="text" ng-model="story.name" class="title-input" tabindex="1" autofocus="true" placeholder="Name your story&hellip;">

  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-17-24 ui-story-container">
      <div class="ui-story">
        <article>
          <header>
            <div class="actions">
              <a href="/project/{{ projectId }}">Cancel</a>
            </div>
            <user-avatar user="currentUser"></user-avatar>
            {{ currentUser.display_name }}&hellip;
          </header>
          <section class="body edit-mode">
            <div class="content-input">
              <div class="text-box">
                <textarea class="atwho" ng-model="story.description" placeholder="Type your message"></textarea>
                <span class="note">
                  <a href="https://daringfireball.net/projects/markdown/basics" target="_blank" title="Learn the basics of Markdown">Markdown</a> &amp; <a href="http://www.emoji-cheat-sheet.com/" target="_blank" title="Emoji cheat sheet">Emoji</a> support <i class="icon-help"></i>
                </span>
              </div>

              <footer>
                <button class="btn btn-main" tabindex="3">Post</button>
              </footer>
            </div>
          </section>
        </article>
      </div>
    </div>
  </div>
</form>
