<div class="pure-g">
  <div class="pure-u-1 pure-u-md-8-24 pure-u-lg-6-24">
    <ul class="plain-list actions-list actions-margin-bottom">
      <li class="title">Personal Settings</li>
      <li ng-class="{'active':onProfilePage}">
        <a href="#" ng-click="showProfilePage()" class="link-large">My Profile</a>
      </li>
      <li ng-class="{'active':onPasswordPage}">
        <a href="#" ng-click="showPasswordPage()" class="link-large">Change Password</a>
      </li>
    </ul>
  </div>

  <div class="pure-u-1 pure-u-md-1-24"></div>

  <div class="pure-u-1 pure-u-md-15-24 pure-u-lg-17-24" ng-show="onProfilePage">
    <h1>My Profile</h1>

    <form ng-submit="updateProfile()">

      <div class="form-inputs account-settings">
        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="first_name">First Name</label>
            <input type="text" id="first_name" ng-model="user.first_name" />
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="last_name">Last Name</label>
            <input type="text" id="last_name" ng-model="user.last_name" />
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="username">Username</label>
            <input type="text" id="username" ng-model="user.username" />
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="email">Email Address</label>
            <input type="text" id="email" ng-model="user.email" />
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="notification_frequency">Notification Frequency</label>
            <select ng-model="user.notification_frequency" ng-options="n[1] as n[0] for n in notificationFrequencies"></select>
          </div>
        </div>

        <hr>

        <h2>Your Avatar</h2>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <user-avatar user="user" size=100></user-avatar>
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <input type="file" mg-model="user.avatar">
          </div>
        </div>

        <hr>

        <h2>Extra profile information</h2>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="job_title">Job Title</label>
            <input type="text" id="job_title" ng-model="user.job_title" />
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="phone">Phone</label>
            <input type="text" id="phone" ng-model="user.phone" />
          </div>
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="skype">Skype</label>
            <input type="text" id="skype" mg-model="user.skype" />
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1 pure-u-lg-2-3 content-input">
            <label for="bio">Bio</label>
            <textarea id="bio" ng-model="user.bio"></textarea>
          </div>
        </div>

        <hr>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label for="current_password">Current Password</label>
            <input type="password" id="current_password" ng-model="user.current_password" />
          </div>
        </div>
      </div>

      <error-list ng-show="errors.length > 0" errors="errors"></error-list>

      <div class="form-actions">
        <input type="submit" class="btn btn-main" value="Save Changes" />
        <p ng-show="showSuccessMessage">Update Successful</p>
      </div>
    </form>

    <p>Unhappy with this service? You can <a href="#" ng-click="deleteAccount()">delete your account</a> at any time.</p>

  </div>

  <div class="pure-u-1 pure-u-md-15-24 pure-u-lg-17-24" ng-show="onPasswordPage">
    <h1>Change my password</h1>

    <form ng-submit="updatePassword()">
      <div class="form-inputs account-settings">
        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label>Current Password</label>
            <input type="password" ng-model="user.current_password">
            <span class="hint">we need your current password to confirm your changes</span>
          </div>

          <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3">
            <label>New Password</label>
            <input type="password" ng-model="user.password">
          </div>
        </div>
      </div>

      <error-list ng-show="errors.length > 0" errors="errors"></error-list>

      <div class="form-actions">
        <input type="submit" value="Update Password" class="btn btn-main">
        <p ng-show="showSuccessMessage">Update Successful</p>
      </div>
    </form>

  </div>
</div>